[core]
	editor = nvim
	excludesfile = ~/.config/gitignore-global
	attributesfile = ~/.gitattributes
	#hooksPath = ~/.config/githooks
[add.interactive]
	useBuiltin = false
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
	side-by-side = true
[merge "mergiraf"]
	name = mergiraf
	driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P
[diff]
	external = difft
	colorMoved = default
	tool = difftastic
[difftool]
	prompt = false
[pager]
	difftool = true
[user]
	name = Maxim Eryomenko
	email = maxim_eryomenko@rambler.ru
	signingkey = 5318919FE71A1E81
[alias]
	clog    = log --no-merges --format='%C(dim)%h    %<(14)%ad    %<(24)%an    %C(reset)%s' --date=relative
	glog    = log-graph
	slog    = log-stat
	dlog    = detailed-log
	noed    = commit --amend --no-edit
	rts     = remote set-url
	rtg     = remote get-url
	cleanup = gc --prune=now --aggressive
	h       = log --decorate --all --oneline --graph
	a       = add -p
	c       = clone
	cr      = clone --recursive
	d       = diff
	rb      = rebase -i
	ab      = all-branches
	rbc     = rebase --continue
	rba     = rebase --abort
	co      = checkout
	mc      = move-to-commit
	cm      = commit -s
	cmm     = commit-modefied
	s       = status
	fp      = format-patch
	sm      = smtp-send-email
	rc      = resolve-conflicts
	sc      = secret
	rs      = restore
	rmb     = remove-merged-branches
	cp      = cherry-pick
	cpc     = cherry-pick --continue
	po      = push-origin
	pfo     = push-force-origin
	rt      = regression-testing
	rnb     = rename-branch
	rcb     = rename-current-branch
	scf     = stash-changed-files
	dsf     = diff-stashed-file
	lsd     = list-stash-diff
[commit]
	gpgsign  = true
	template = ~/.config/gitmessage
[sendemail]
	smtpserver     = smtp.rambler.ru
	smtpuser       = maxim_eryomenko@rambler.ru
	smtpserverport = 587
	smtpencryption = tls
[init]
	defaultBranch = main
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@gitlab.freedesktop.org:"]
	insteadOf = https://gitlab.freedesktop.org/
[url "git@gitlab.gnome.org:"]
	insteadOf = https://gitlab.gnome.org/
[url "git@gitlab.kitware.com:"]
	insteadOf= https://gitlab.kitware.com/
[grep]
	lineNumber = true
[rerere]
	enabled = true
	autoUpdate = true
[fetch]
	prune = true
[color "status"]
	added = green
	changed = cyan
	untracked = magenta
[protocol]
	version = 2
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[color]
	ui = auto
[help]
	autoCorrect = prompt
[committer]
	name = Maxim Eryomenko
	email = maxim_eryomenko@rambler.ru
[advice]
	skippedCherryPicks = false
[tag]
	forceSignAnnotated = true
	sort = -version:refname
[pack]
	useBitmapBoundaryTraversal = true
[includeIf "gitdir:~/work/"]
	path = ~/work/.gitconfig
